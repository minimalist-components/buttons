html
  meta(name='viewport' content='width=device-width, user-scalable=no')
  link(rel='stylesheet' href='app.css')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans')
  style.
    body {
      font-family: 'Open Sans', sans-serif;
      -webkit-font-smoothing: antialiased;
    }

body
  h1 Minimalist buttons

  h2 .button
  div
    button.button flat button
    a.button(href='#') flat button
    button.button flat button
    button.button flat button
    button.button flat button
    button.button flat button
    button.button(disabled) flat button disabled

  h2 .button.raised
  div
    button.button.raised raised button
    a.button.raised(href='#') raised button
    button.button.raised(disabled) disabled raised button

  h2 .button.action
  div
    button.button.action: span.zmdi.zmdi-plus
    button.button.action: span.zmdi.zmdi-plus.zmdi-hc-2x
    button.button.action: span.zmdi.zmdi-edit
    button.button.action(disabled): span.zmdi.zmdi-delete

  h2 .button.raised.action
  div
    button.button.raised.action: span.zmdi.zmdi-plus
    button.button.raised.action: span.zmdi.zmdi-plus.zmdi-hc-2x
    button.button.raised.action: span.zmdi.zmdi-edit
    button.button.raised.action(disabled): span.zmdi.zmdi-delete
