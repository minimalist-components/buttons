html
  meta(name='viewport' content='width=device-width, user-scalable=no')
  base(href='/')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans')
  style
    include ../../docs/vendor.css
    include ../../dist/mn-button.css
  style.
    body {
      font-family: 'Open Sans', sans-serif;
      -webkit-font-smoothing: antialiased;
    }

    .blue {background: rgb(50,154,240); color: white}
    .red {background: rgb(240,62,62); color: white}

//- body
  h1 mn-button

  h2 .mn-button
  div
    button.mn-button flat button
    a.mn-button(href='#') flat button
    button.mn-button flat button
    button.mn-button flat button
    button.mn-button flat button
    button.mn-button flat button
    button.mn-button(disabled) flat button disabled

  h2 .mn-button.raised
  div
    button.mn-button.raised raised button
    a.mn-button.raised(href='#') raised button
    button.mn-button.raised(disabled) raised button disabled

  h2 .mn-button.action
  div
    button.mn-button.action: span.zmdi.zmdi-plus
    button.mn-button.action: span.zmdi.zmdi-plus.zmdi-hc-2x
    button.mn-button.action: span.zmdi.zmdi-edit
    button.mn-button.action(disabled): span.zmdi.zmdi-delete

  h2 .mn-button.raised.action
  div
    button.mn-button.raised.action: span.zmdi.zmdi-plus
    button.mn-button.raised.action: span.zmdi.zmdi-plus.zmdi-hc-2x
    button.mn-button.raised.action: span.zmdi.zmdi-edit
    button.mn-button.raised.action(disabled): span.zmdi.zmdi-delete

body
  //- h1 mn-button

  .layout-fullscreen.layout-centered    
    div.layout-container.layout-column.layout-sm-row.align-center
      button.mn-button flat button

      button.mn-button.raised raised button

      button.mn-button.raised.blue raised button with color
      button.mn-button.action: .zmdi.zmdi-plus

      button.mn-button.raised.action: .zmdi.zmdi-edit
      button.mn-button.raised.action.red: .zmdi.zmdi-delete
  
  script
    include ../../dist/mn-button.js
